{
    "_-x-vim-formatting": " vim: set ft=javascript ts=4 sw=4 et : ",

    "name": "vend/pheat-bundle",
    "description": "Integrates a feature manager into Symfony2",
    "keywords": ["bundle", "feature", "manager"],
    "type":    "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Vend Devteam",
            "email": "devteam@vendhq.com"
        }
    ],

    "require": {
        "php":     ">=5.6.0",
        "psr/log": "~1.0.0",

        "vend/pheat": ">=0.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "monolog/monolog": "~1.22",
        "doctrine/doctrine-bundle": "~1.6",
        "symfony/symfony": "~3.2"
    },

    "autoload": {
        "psr-4": {
            "Vend\\PheatBundle\\": ""
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
